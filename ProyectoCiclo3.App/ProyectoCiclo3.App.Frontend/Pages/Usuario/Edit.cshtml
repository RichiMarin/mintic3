@page
@model ProyectoCiclo3.App.Frontend.Pages.EditUsuarioModel
@{
    var usuario = Model.Usuario;
}


<div class = "row mt-5">
<div class="text-center col-6">
<form method="post">
  <label for="id" class="form-label">Id:</label>
  <input type="number" class="form-control d-none" id="id" name="id" placeholder="Id" asp-for="@usuario.id">

  <label for="nombre" class="form-label">Nombre:</label>
  <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" asp-for="@usuario.nombre">

  <label for="apellidos" class="form-label">Apellidos:</label>
  <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Apellidos" asp-for="@usuario.apellidos">

  <label for="direccion" class="form-label">Direccion:</label>
  <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Direccion" asp-for="@usuario.direccion">

  <label for="telefono" class="form-label">Telefono:</label>
  <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Telefono" asp-for="@usuario.telefono">
  
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>
<div class="col-4">
  <h5><p>Crear Usuario</p></h5>
</div>
</div>