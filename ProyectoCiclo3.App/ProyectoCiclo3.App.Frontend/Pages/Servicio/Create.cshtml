@page
@model ProyectoCiclo3.App.Frontend.Pages.FormServicioModel
@{
}

 
<div class = "row mt-5">
<div class="text-center col-6">
<form method="post">
  
  <label for="origen" class="form-label">Origen:</label>
      <select asp-for="Servicio.origen" class="form-control">
            <option value="">-</option>
            @foreach (var usuario in Model.Usuarios)
        {
            <option value="@usuario.id">@usuario.nombre @usuario.apellidos</option>
        }
        </select>
  <label for="destino" class="form-label">Destino:</label>
      <select asp-for="Servicio.destino" class="form-control">
            <option value="">-</option>
            @foreach (var usuario in Model.Usuarios)
        {
            <option value="@usuario.id">@usuario.nombre @usuario.apellidos</option>
        }
        </select>
  <label for="fecha" class="form-label">Fecha:</label>
  <input type="Date" class="form-control" id="fecha" placeholder="Fecha" asp-for="Servicio.fecha">
  <label for="hora" class="form-label">Hora:</label>
  <input type="time" class="form-control" id="hora" placeholder="Hora" asp-for="Servicio.hora">
  <label for="encomienda" class="form-label">Encomienda:</label>
      <select asp-for="Servicio.encomienda" class="form-control">
            <option value="">-</option>
            @foreach (var encomienda in Model.Encomiendas)
        {
            <option value="@encomienda.id">@encomienda.descripcion @encomienda.presentacion</option>
        }
        </select>
  <hr>
  <button type="submit" class="btn btn-success">Enviar</button>
</form>
</div>
</div>